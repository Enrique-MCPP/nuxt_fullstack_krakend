{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "name": "KrakenD Enterprise API Gateway",
  "port": 8080,
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "endpoints": [
    {
      "@comment": "Se podr√≠a pooner un includes: [app1.json,app2.json]",

      "endpoint": "/api/product/",
      "backend": [
        {
          "url_pattern": "/api/product/",
          "host": [
            "http://resource-server:8200"
          ],
          "is_collection": true
        }
      ],
      "extra_config": {
        "auth/validator": {
          "alg": "HS256",
          "roles_key": "roles",
          "jwk_local_path": "/app/data/jwk/symmetric.json",
          "roles": [
            "ROLE_ADMIN"
          ],
          "disable_jwk_security": true
        }
      }
    },
    {
      "endpoint": "/api/auth/signin",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/api/auth/signin",
          "host": [
            "http://generator-json:8400"
          ]
        }
      ],
      "extra_config": {
        "auth/signer": {
          "alg": "HS256",
          "kid": "sim2",
          "keys_to_sign": [
            "access_token",
            "refresh_token"
          ],
          "jwk_local_path": "/app/data/jwk/symmetric.json",
          "disable_jwk_security": true
        }
      }
    },
    {
      "endpoint": "/api/auth/login",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/api/auth/login",
          "host": [
            "http://login:8300"
          ]


        }
      ]
    }
  ]
}
